{
	"name": "Deviant Love",
	"version": "2.4",
	"description": "__MSG_extDesc__",
	"icons": {
		"16": "images/heart/16.png",
		"48": "images/heart/48.png",
		"128": "images/heart/128Starred.png"
	},
	"default_locale": "en",

	"background": {
		"scripts": ["background.js", "syncByBrowser.js"],
		"persistent": false
	},
	"page_action": {
		"default_icon": "images/heart/38.png",
		"default_title": "Deviant Love"
	},
	"options_ui": {
		"page": "options/options.html",
		"chrome_style": true,
		"browser_style": true
	},
	"content_scripts": [{
		"matches": ["*://*.deviantart.com/favourites/*"],
		"js": ["favesPages/detector.js", "favesPages/manager.js"],
		"run_at": "document_end"
	}],
	"web_accessible_resources": ["report/popup.html"],

	"permissions": ["contextMenus", "storage", "*://*.deviantart.com/"],
	"minimum_chrome_version": "55",
	"applications": {
		"gecko": {
			"id": "deviantlove@pikadudeno1.com",
			"strict_min_version": "52.0"
		}
	},
	"manifest_version": 2
}